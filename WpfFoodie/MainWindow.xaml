<Window x:Class="WpfFoodie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFoodie"
        mc:Ignorable="d"
        Title="Apple Catcher" Height="450" Width="800"
        ResizeMode="CanMinimize" KeyDown="Window_KeyDown">
    <Grid x:Name="GameGrid">
        <Rectangle x:Name="recPlayer" HorizontalAlignment="Center" Height="10" Margin="0,403,0,0" Stroke="Black" VerticalAlignment="Top" Width="100" Fill="#FF7A7777"/>
        <Label x:Name="lblScore" Content="0" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="25"/>
        <Label x:Name="lblHighscore" Content="Highscore: 0" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top" FontSize="25"/>

    </Grid>
</Window>
